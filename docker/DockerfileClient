FROM python:3.10
LABEL maintainer=RWKV-RAG-Client

WORKDIR /root

# 初始化环境
RUN ln -sf /usr/share/zoneinfo/Asia/Shanghai /etc/localtime && \
    echo "Asia/Shanghai" > /etc/timezone

RUN apt-get update -y && \
    apt-get install -y git && \
    apt-get install -y --no-install-recommends libglib2.0-0 && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*
RUN pip install --upgrade pip setuptools
RUN pip install --index-url https://pypi.python.org/simple/ pipx && \
    pipx install poetry --force

# 下载代码
# RUN git clone https://github.com/AIIRWKV/RWKV-RAG.git
RUN git clone -b v0.1.4 http://github.com/AIIRWKV/RWKV-RAG.git

# 安装 Python 依赖
WORKDIR /root/RWKV-RAG
RUN pip install -r required/requirements.txt

# 安装浏览器驱动
RUN playwright install
RUN playwright install-deps
RUN apt-get update && apt-get install libnss3  \
    libnspr4  \
    libdbus-1-3 \
    libatk1.0-0  \
    libatk-bridge2.0-0  \
    libcups2  \
    libdrm2  \
    libatspi2.0-0  \
    libxcomposite1  \
    libxdamage1 \
    libxfixes3  \
    libxrandr2 \
    libgbm1  \
    libxkbcommon0 \
    libasound2

# 安装 tesseract-ocr
RUN apt-get update && apt-get install -y tesseract-ocr \
    tesseract-ocr-chi-sim


# 启动应用程序
ENTRYPOINT ["streamlit", "run", "client.py"]